
@{
    ViewBag.Title = "Index";
}


<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Plant Master Data</a></li>
    <li class="active">Plant Upload and Geocoding</li>
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE TITLE -->
<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> Plant Upload and Geocoding</h2>
</div>

<div class="alert alert-info" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <strong>@TempData["Notification"].ToString()</strong>
</div>
<!-- END PAGE TITLE -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12">

            <!-- START VERTICAL FORM SAMPLE -->
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Production Plant Location Upload</h3>
                    <form role="form" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Select Plant Data File</label>
                            <input name="file" type="file" required />
                        </div>

                        <div class="checkbox pull-left">
                            <label><input type="checkbox"> Plant Data does not have any Duplicate</label>
                        </div>

                        <div class="form-group">
                            <button type="button" class="btn btn-info">Import</button>
                        </div>

                    </form>
                </div>
            </div>
            <!-- END VERTICAL FORM SAMPLE -->
        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->
