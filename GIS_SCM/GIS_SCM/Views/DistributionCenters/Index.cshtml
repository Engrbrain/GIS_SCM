@model IEnumerable<GIS_SCM.Models.DistributionCenter>

@{
    ViewBag.Title = "Index";
}

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li class="active">Manage Distribution Centers</li>
</ul>
<!-- END BREADCRUMB -->

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span>Manage Distribution Centers</h2>
</div>

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Plants Spatial Master Data</h3>
                    <div class="btn-group pull-right">
                        <button class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i> Export Data</button>
                        <ul class="dropdown-menu">
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'json',escape:'false'});"><img src='~/Content/img/icons/json.png' width="24" /> JSON</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'json',escape:'false',ignoreColumn:'[2,3]'});"><img src='~/Content/img/icons/json.png' width="24" /> JSON (ignoreColumn)</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'json',escape:'true'});"><img src='~/Content/img/icons/json.png' width="24" /> JSON (with Escape)</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'xml',escape:'false'});"><img src='~/Content/img/icons/xml.png' width="24" /> XML</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'sql'});"><img src='~/Content/img/icons/sql.png' width="24" /> SQL</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'csv',escape:'false'});"><img src='~/Content/img/icons/csv.png' width="24" /> CSV</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'txt',escape:'false'});"><img src='~/Content/img/icons/txt.png' width="24" /> TXT</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'excel',escape:'false'});"><img src='~/Content/img/icons/xls.png' width="24" /> XLS</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'doc',escape:'false'});"><img src='~/Content/img/icons/word.png' width="24" /> Word</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'powerpoint',escape:'false'});"><img src='~/Content/img/icons/ppt.png' width="24" /> PowerPoint</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'png',escape:'false'});"><img src='~/Content/img/icons/png.png' width="24" /> PNG</a></li>
                            <li><a href="#" onClick="$('#customers2').tableExport({type:'pdf',escape:'false'});"><img src='~/Content/img/icons/pdf.png' width="24" /> PDF</a></li>
                        </ul>
                    </div>
                </div>
                <div class="panel-body">
                    <p>

                        <a href="@Url.Action("Create", "DistributionCenters")" class="btn-danger">Create Storage Location</a>
                    </p>
                    <div class="table-responsive">
                        <table id="customers2" class="table datatable">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Plant.PlantCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DCNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DCDesc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DCAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Latitude)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Longitude)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Plant.PlantCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DCNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DCDesc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DCAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Latitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Longitude)
                                    </td>
                                    <td>
                                        <a title="Modify Distribution Centers" href="@Url.Action("Edit", "DistributionCenters", new { id = item.ID})" class="btn btn-default btn-rounded btn-condensed btn-sm"><i class='fa fa-pencil'></i></a>
                                        <a title="View Distribution Centers" href="@Url.Action("Details", "DistributionCenters", new { id = item.ID})" class="btn btn-default btn-rounded btn-condensed btn-sm"><i class='fa fa-desktop'></i></a>
                                        <a title="Delete Distribution Centers" href="@Url.Action("Delete", "DistributionCenters", new { id = item.ID})" class="btn btn-default btn-rounded btn-condensed btn-sm"><i class='fa fa-times'></i></a>

                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- END PAGE CONTENT WRAPPER -->
            </div>
<!-- END PAGE CONTENT -->
        </div>
<!-- END PAGE CONTAINER -->
