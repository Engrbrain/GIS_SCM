
@{
    ViewBag.Title = "Index";
}



<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li class="active">Plant Location Map</li>
</ul>
<!-- END BREADCRUMB -->

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span>Plant Map</h2>
</div>

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Plant Locations</h3>
                </div>
                <div class="panel-body">
                    <div id="world-map-markers" style="width: 100%; height: 600px"></div>




                </div>
            </div>
        </div>
    </div>

</div>
<!-- END PAGE CONTENT WRAPPER -->
            </div>
<!-- END PAGE CONTENT -->
        </div>
<!-- END PAGE CONTAINER -->

@section JavaScript
{
    <script type="text/javascript" src="~/Content/js/plugins/jvectormap/jquery-jvectormap-2.0.3.min.js"></script>
    <script type="text/javascript" src="~/Content/js/plugins/jvectormap/jquery-jvectormap-ng-mill-en.js"></script>
    <script type="text/javascript" src="~/Content/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>

    <script type="text/javascript">




        $(function () {
                        $('#world-map-markers').vectorMap({
                            map: 'ng_mill_en',
                            scaleColors: ['#C8EEFF', '#0071A4'],
                            normalizeFunction: 'polynomial',
                            hoverOpacity: 0.7,
                            hoverColor: false,
                            markerStyle: {
                                initial: {
                                    fill: '#F8E23B',
                                    stroke: '#383f47'
                                }
                            },
                            regionsSelectable: true,
                            regionStyle: {
                                selected: {
                                    fill: '#8AB8E6'
                                },
                                initial: {
                                    fill: '#66C266'
                                }
                            },
                            backgroundColor: '#383f47',
                            markers: @Html.Raw(ViewBag.markers)


                        });
        });




    </script>


}
